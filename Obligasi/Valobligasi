#Mencari t dan k
valobligasi<- function (f,r,i,ttm,m) {
#mendapatkan nilai t
  t=ceiling((ttm*m)+1)
  b=(ttm*m)-floor(ttm*m)
  k=1-b
  rbin=r/m
  ibin=i/m
  vbin=1/(1+ibin)
  an=(1-vbin^t)/ibin
  bt=(f*rbin*an) + f*vbin^t
  print(bt)
  
#THEORITICAL METHOD
bf1=bt*(1+ibin)^k
frk1=f*rbin*((1+ibin)^k-1)/ibin
bm1=bf1-frk1
print(bm1)

#PRACTICAL METHOD
bf2=bt*(1+k*ibin)
frk2=k*f*rbin
bm2=bf2-frk2
print(bm2)

#SEMI THEORITICAL METHOD  
bf3=bt*(1+ibin^K)
frk3=k*f*rbin
bm3=bf3-frk3
print(bm3)

}


